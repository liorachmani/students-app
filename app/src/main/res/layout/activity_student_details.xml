<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentDetailsActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:layout_marginTop="50dp"
        android:background="#A7E5E6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.817"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_avatar" />

    <TextView
        android:id="@+id/student_details_activity_fullname_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="4dp"
        android:text="Name:"
        app:layout_constraintEnd_toStartOf="@+id/student_details_activity_fullname_text_view_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/student_details_activity_fullname_text_view_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@+id/student_details_activity_fullname_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student_details_activity_fullname_text_view" />

    <TextView
        android:id="@+id/student_details_activity_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="4dp"
        android:text="ID:"
        app:layout_constraintEnd_toStartOf="@+id/student_details_activity_id_text_view_value"
        app:layout_constraintStart_toStartOf="@+id/student_details_activity_fullname_text_view"
        app:layout_constraintTop_toBottomOf="@+id/student_details_activity_fullname_text_view" />

    <TextView
        android:id="@+id/student_details_activity_id_text_view_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@+id/student_details_activity_id_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student_details_activity_id_text_view" />

    <Button
        android:id="@+id/student_details_activity_edit_student_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/student_details_activity_phone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="4dp"
        android:text="Phone:"
        app:layout_constraintEnd_toStartOf="@id/student_details_activity_phone_text_view_value"
        app:layout_constraintStart_toStartOf="@id/student_details_activity_id_text_view"
        app:layout_constraintTop_toBottomOf="@id/student_details_activity_id_text_view" />

    <TextView
        android:id="@+id/student_details_activity_phone_text_view_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@id/student_details_activity_phone_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student_details_activity_phone_text_view" />

    <TextView
        android:id="@+id/student_details_activity_address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="4dp"
        android:text="Address:"
        app:layout_constraintEnd_toStartOf="@+id/student_details_activity_address_text_view_value"
        app:layout_constraintStart_toStartOf="@id/student_details_activity_phone_text_view"
        app:layout_constraintTop_toBottomOf="@+id/student_details_activity_phone_text_view" />

    <TextView
        android:id="@+id/student_details_activity_address_text_view_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@+id/student_details_activity_address_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student_details_activity_address_text_view" />

    <CheckBox
        android:id="@+id/student_details_activity_checked_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:enabled="false"
        android:text="Checked"
        app:layout_constraintStart_toStartOf="@id/student_details_activity_address_text_view"
        app:layout_constraintTop_toBottomOf="@+id/student_details_activity_address_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>